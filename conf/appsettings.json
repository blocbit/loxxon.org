{
  "ConfigVersion": 1,
  "Log": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "Enrich": "FromLogContext",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{SourceCon>
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Form>
          "path": "bamboo.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "NetworkSettings": {
    "Environment": "testnet",
    "RunAsWebServer": true,
    "WalletEndpoint" : "http://0.0.0.0:8000/",
    "WebserverEndpoint": "http://0.0.0.0:8001/",
    "RemoteNode": "http://0.0.0.0:7000",
    "NumberOfConfirmations": 1,
    "Routing": {
      "Transaction": "mem/transaction",
      "TransactionId": "chain/transaction/{0}",
      "MempoolTransactionId": "mem/transaction/{0}",
      "SafeguardTransactions": "chain/safeguard",
      "Blocks": "chain/blocks/{0}/{1}",
      "BlockHeight": "chain/height"
    }
  },
  "Timing": {
    "SyncIntervalMins": 1,
    "SessionTimeoutMins": 30
  }
}
 

